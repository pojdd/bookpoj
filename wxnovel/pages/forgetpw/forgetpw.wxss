.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

input{
  text-align: center;
  width: 80%;
  height: 100rpx;
  border: 3rpx solid;
  box-shadow: 10px 10px 5px #888888;
  margin-top: 150rpx;
  border-radius: 30rpx;
}
.btn{
  margin: 50rpx;
  width: 40%;
  height: 100rpx;
  background-color:aqua;
  border-radius: 20rpx;
  border: 3rpx solid;
  box-shadow: 10px 10px 5px #888888;
}

.init{
  margin-top: 20rpx;
  border-radius: 20rpx;
