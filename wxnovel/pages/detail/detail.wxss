/* pages/detail/detail.wxss */
.detail_top{
 width: 100%;
 height: 300rpx;
 background-image: linear-gradient(#9c9c9e, #656672);
}
.detail_top_pic{
  width:25%;
  height: 80%;
  margin-left: 30rpx;
  margin-top: 25rpx;
  background-color: red;
  float: left;
}
.detail_top_pic_item{
  width:100%;
  height: 100%;
}
.detail_top_info{
  width:60%;
  height: 80%;
  margin-left: 20rpx;
  float: left;
}
.detail_top_info_text{
  display: block
}
.detail_top_info_text_bookname{
  display: block;
  font-weight: 400;
  color: white;
}
.detail_top_info_text_author{
  display: block;
  font-size: 30rpx;
  color: white;
}

.detail_top_info_text_class{
  display: block;
  font-size: 30rpx;
  color: white;
}

.detail_top_info_text_readcount{
    display: block;
    font-size: 30rpx;
    color: white;
}
.detail_top_info_text_update{
    display: block;
    font-size: 30rpx;
    color: white;
}

.detail_partwo{
  width:100%;
  height: 80rpx;
  display:flex; 
  align-items: center;
  text-align: center;
  padding-left: 10%rpx;
}

.detail_partwo_botton1{
  width: 43%;
  height: 70%;
  margin-left: 5%;
  float: left;
  display:flex; 
  padding-left: 11%;
  font-weight: 200;
  align-items: center;
  text-align: center;
  border: 1rpx #33a6ff solid;
  color: #33a6ff;
  border-radius:30rpx;
}


.detail_partwo_botton2{
  width: 43%;
  margin-right: 5%;
  height: 80%;
  font-weight: 200;
  padding-left: 11%;
  display:flex; 
  text-align: center;
  align-items: center;
  float: right;
  background-color: #33a6ff;
  color: white;
  border-radius: 30rpx;
}

.detail_parthree{
  width:100%;
}

.detail_parthree_text{
  color: #7d7d85;
  font-size:36rpx;
  display: -webkit-box;
  -webkit-box-orient:vertical;
  text-overflow: ellipsis;
  overflow:hidden; 
}

.ellipsis{
  -webkit-line-clamp:2;
  opacity: 0.75;
}

.unellipsis{
  -webkit-line-clamp:0;
  opacity: 1;
}

.detail_partThree{
  width:100%;
  height: 80rpx;
  display:flex; 
  align-items: center;
  text-align: center;
  padding-left: 10%rpx;
}
